<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>List Customer</title>
    <% include header %>

  </head>

  <body>

    <div class="container">
    <div class="row">
      <!-- kotak kosong -->
      <div class="col-sm-4">
        <form class="form" action="/api/customer" method="post">
          <div class="form-group">
            <label for="memberId">member ID:</label>
            <input type="text" name="memberId" class="form-control">
          </div>

          <div class="form-group">
            <label for="name">Customer Name:</label>
            <input type="text" name="name" class="form-control">
          </div>

          <div class="form-group">
            <label for="address">Customer Address:</label>
            <input type="text" name="address" class="form-control">
          </div>

          <div class="form-group">
            <label for="zip">ZIP Code:</label>
            <input type="text" name="zip" class="form-control">
          </div>

          <div class="form-group">
            <label for="phone">Phone Number:</label>
            <input type="text" name="phone" class="form-control">
          </div>
          <input type="submit" class="btn btn-success" value="add new customer">
        </form>
      </div>
      <!-- isi form -->
      <div class="col-sm-4">

      </div>
      <!-- kotak kosong -->
      <div class="col-sm-4"></div>

    </div>


      <h1> List Customer </h1>
      <table class="table table-condensed">
        <thead>
          <tr>
            <th>memberId</th>
            <th>Name</th>
            <th>Address</th>
            <th>ZIP</th>
            <th>Phone</th>
          </tr>
        </thead>
        <tbody>

          <% for(var i = 0; i < customer.length; i++){ %>
          <tr>
            <td><%= customer[i].memberId %></td>
            <td><%= customer[i].name %></td>
            <td><%= customer[i].address %></td>
            <td><%= customer[i].zip %></td>
            <td><%= customer[i].phone %></td>
          </tr>
          <% } %>

        </tbody>
      </table>

    </div>
    <script type="text/javascript">

    </script>
  </body>
</html>
